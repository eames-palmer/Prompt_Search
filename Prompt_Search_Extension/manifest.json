{
    "manifest_version": 2,
    "name": "Prompt Search",
    "options_page": "options.html",
    "description": "Search the web from anywhere in chrome using a keyboard shortcut! [Includes searching while in Fullscreen mode.]",
    "version": "0.2",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "persistant": "false",
    "background": {
        "matches": [
            "<all_urls>"
        ],
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon_32.png",
        "default_title": "Prompt Search: Set Keybinding in chrome://extensions/shortcuts",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon_16.png",
        "32": "icon_32.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    }
}